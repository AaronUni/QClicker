<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CowText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:id="@+id/textMessage" android:layout_marginBottom="180dp"/>
    <ImageView
            android:layout_width="500dp"
            android:layout_height="301dp" app:srcCompat="@drawable/kuh" android:id="@+id/imageViewKuh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.505" app:layout_constraintBottom_toTopOf="@+id/textMessage"
            app:layout_constraintVertical_bias="0.876" android:contentDescription="@string/CowDescription"/>
    <Button
            android:text="@string/Resettext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Resetbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:textSize="18sp"
            android:textColor="?attr/actionModeSplitBackground" app:layout_constraintTop_toBottomOf="@+id/textMessage"
            app:layout_constraintVertical_bias="0.183" android:textAllCaps="false"/>
    <EditText
            android:layout_width="245dp"
            android:layout_height="110dp"
            android:inputType="textPersonName"
            android:text="@string/perv"
            android:ems="10"
            android:id="@+id/per"
            android:visibility="invisible" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="76dp" tools:visibility="visible"
            android:textAllCaps="false" android:textSize="36sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>